<%- include("partials/header.ejs") %>

<div class="blog-container">
  <h2>
    <%= blogPost.title %>
  </h2>
  <h3>By: <strong><%= blogPost.author %></strong></h3>
  <p class="blog-content"> <%= blogPost.content %> </p>
  <hr>

  <div class="buttons-container">
    <a href="/blog/<%= blogId %>/edit" class="edit-btn">Edit</a>
    <p>|</p>
    <a class="delete-btn">Delete</a>    

  </div>

  <!-- Delete Modal -->
   <dialog id="delete-modal">
    <h2>Delete Blog</h2>
    <p><p>Are you sure you want to delete this blog post?</p></p>

    <div>
      <form action="/blog/<%= blogId %>/delete"
            method="POST">
        <input type="text"
            id="passkey"
            name="passkey"
            placeholder="Enter passkey" required>

        <button class="cancel-btn">Cancel</button> 
        <button type="submit" class="confirm-btn"
          onclick="confirmDelete()">Yes, Delete</button>
      </form>
    </div>
   </dialog>
</div>

<%- include("partials/footer.ejs") %>